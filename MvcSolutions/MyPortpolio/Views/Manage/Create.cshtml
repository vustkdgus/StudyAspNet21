@model MyPortpolio.Models.Manage

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<script src="~/plugin/ckeditor/ckeditor.js"></script>

<div class="col-lg col-md ml-auto mr-auto">
    <div class="card card-login">
        <div class="section section-contacts" style="padding:40px 0;">
            <div class="row">
                <div class="col-md-11 ml-auto mr-auto">
                    <h3 class="text-center" style="font-weight:bold; color:black; margin-top: 0px">Manage</h3>
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Cate" class="control-label"></label>
                            <select asp-for="Cate" class="form-control">
                                <option value="">선택</option>
                                <option value="Index">Index</option>
                                <option value="Profile">Profile</option>
                                <option value="Portpolio">Portpolio</option>
                            </select>
                            <span asp-validation-for="Cate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Contents, new { @class = "content-label" })
                            @Html.TextAreaFor(model => model.Contents,
                                new { @id = "EditorContents", @class = "form-control", @rows = "10" })
                            <script>CKEDITOR.replace("EditorContents");</script>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <a asp-action="index" class="btn btn-success">리스트</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

